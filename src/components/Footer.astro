---
import FacebookIcon from "./Icons/FacebookIcon.astro";
import InstagramIcon from "./Icons/InstagramIcon.astro";
import NavMenu from "./NavMenu.astro";

// Obtener año actual
const currentYear = new Date().getFullYear();
---
<footer class="bg-[#000] text-white p-4 sm:p-6 lg:p-8 relative">
    <!-- Container principal responsive -->
    <div class="flex flex-col lg:flex-row lg:items-center lg:justify-between gap-6 lg:gap-4">
        
        <!-- Logo y copyright -->
        <div class="flex flex-col sm:flex-row items-center justify-center sm:justify-start gap-3 sm:gap-4 order-1 lg:order-1">
            <img src="/MetalFusionFavicon.svg" class="w-16 sm:w-20 lg:w-24" alt="Metal Fusion Logo">
            <p class="text-xs sm:text-sm text-center sm:text-left">© {currentYear} Metal Fusion</p>
        </div>

        <!-- Navigation Menu -->
        <div class="order-3 lg:order-2 w-full lg:w-auto flex justify-center">
            <NavMenu className="w-full sm:w-auto" classUl="flex-wrap justify-center lg:justify-start gap-2 lg:gap-4"/>
        </div>

        <!-- Redes sociales -->
        <div id="redes-sociales" class="flex flex-row items-center justify-center gap-4 sm:gap-6 order-2 lg:order-3">
            <a class="hover:scale-110 transition-transform duration-200" 
               href="https://www.facebook.com/profile.php?id=61564890875846" 
               target="_blank" 
               rel="noopener noreferrer"
               aria-label="Facebook">
                <FacebookIcon class="size-5 sm:size-6"/>
            </a>
            <a class="hover:scale-110 transition-transform duration-200" 
               href="https://www.instagram.com/metal_fusiongt/" 
               target="_blank" 
               rel="noopener noreferrer"
               aria-label="Instagram">
                <InstagramIcon class="size-5 sm:size-6"/>
            </a>
        </div>
    </div>

    <!-- Créditos de desarrollo -->
    <div class="mt-6 lg:mt-4 pt-4 lg:pt-0 border-t border-gray-700 lg:border-t-0 lg:absolute lg:right-4 lg:bottom-4">
        <p class="text-xs text-center lg:text-right text-gray-400">
            Desarrollado por 
            <a href="https://noesis-dev.netlify.app" 
               class="hover:underline text-gray-800 bg-white rounded-xl px-2 py-1 ml-1 transition-colors duration-200 hover:bg-gray-100">
                Noesis
            </a>
        </p>
    </div>
</footer>