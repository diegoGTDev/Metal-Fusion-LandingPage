---
const items = [
  { name: "Inicio", href: "#inicio" },
  { name: "Nosotros", href: "#nosotros" },
  { name: "Productos", href: "#productos" },
  { name: "Vis√≠tanos", href: "#visitanos" },
];

const { className, classUl } = Astro.props;
---

<nav class={className}>
  <ul class={`flex flex-row justify-between items-center font-semibold gap-10 ${classUl}`}>
    {items.map((item) => (
      <li class="hover:text-red-500 transition-colors duration-300">
        <a href={item.href}>{item.name}</a>
      </li>
    ))}
  </ul>
</nav>
