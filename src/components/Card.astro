---
interface props {
  title: string;
  description: string;
  imageUrl: string;
}
---

<div class="w-100 h-full bg-white shadow-xl relative min-h-full">
  <!-- Aca ira la imagen -->
  <div class="w-full h-full overflow-hidden">
    <img src={Astro.props.imageUrl} class="w-full h-full object-cover" />
  </div>
  <!-- Aca se mostrara la info del card -->
  <div
    id="info"
    class="text-center p-5 absolute inset-0 z-20 flex items-center justify-center opacity-0 transition-opacity duration-300 hover:opacity-100 hover:bg-black/50"
  >
    <div class="flex flex-col items-center justify-center text-white">
      <h3 class="font-bold text-2xl">{Astro.props.title}</h3>
      <p class="text-sm font-semibold mt-4">
        {Astro.props.description}
      </p>
    </div>
  </div>
</div>
