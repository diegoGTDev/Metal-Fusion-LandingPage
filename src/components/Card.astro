---
interface props {
  title: string;
  description: string;
  imageUrl: string;
}
---

<div class="w-90 h-150 bg-amber-50 shadow-xl flex flex-col transition-transform duration-300 ease-in-out hover:scale-105 rounded-sm overflow-hidden">
  <!-- Aca ira la imagen -->
  <div class="w-full h-150 overflow-hidden">
    <img src={Astro.props.imageUrl} class="w-full h-full object-cover" />
  </div>
  <!-- Aca se mostrara la info del card -->
  <div class="text-center p-8 h-full">
    <div class="flex flex-col items-center justify-center h-full">
        <h3 class="font-bold text-2xl">{Astro.props.title}</h3>
        <p class="text-sm font-semibold text-gray-700 mt-10">{Astro.props.description}</p>
    </div>
  </div>
</div>
